<resources>

    <!-- NoActionBar 注意用NoActionBar Theme.AppCompat.Light.NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/green</item>

        <!-- 下面两个用来实现toolbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- 设置toolbar上的弹出菜单 -->
        <item name="actionOverflowMenuStyle">@style/LYJMenuStyle</item>

    </style>

    <style name="Base.AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!--菜单弹出的时候不遮盖标题栏的主题-->
    <style name="LYJMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <!--  <item name="actionMenuTextColor">#ABCDEF</item> 敲定颜色-->
        <item name="android:textColor">#00f</item>
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
        <item name="android:colorBackground">#ededed</item><!--菜单背景色-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Dialog的透明背景 -->
    <style name="myTransparentDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="DetailActivityTheme" parent="AppTheme">
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--无进入动画-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <color name="black">#000000</color>
    <color name="green">#00ff00</color>
</resources>
